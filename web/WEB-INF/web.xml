<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Acceuil</servlet-name>
        <servlet-class>servlet.Acceuil</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPub</servlet-name>
        <servlet-class>servlet.AddPub</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SynchronisationPublication</servlet-name>
        <servlet-class>servlet.SynchronisationPublication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllPublication</servlet-name>
        <servlet-class>servlet.AllPublication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>servlet.AddComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SynchroComment</servlet-name>
        <servlet-class>servlet.SynchroComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadFileServlet</servlet-name>
        <servlet-class>servlet.DownloadFileServlet</servlet-class>
        <init-param>
            <param-name>chemin</param-name>
            <param-value>C:/Users/Abderahim/intelj/RSE/web/static/stokage</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Publication</servlet-name>
        <servlet-class>servlet.Publication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicationTag</servlet-name>
        <servlet-class>servlet.PublicationTag</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SynchroNotification</servlet-name>
        <servlet-class>servlet.SynchroNotification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>servlet.ChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginChat</servlet-name>
        <servlet-class>servlet.LoginChat</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>Acceuil</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPub</servlet-name>
        <url-pattern>/Poster</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SynchronisationPublication</servlet-name>
        <url-pattern>/SynchroPub</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllPublication</servlet-name>
        <url-pattern>/Historique</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/Commenter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SynchroComment</servlet-name>
        <url-pattern>/SynchroComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DownloadFileServlet</servlet-name>
        <url-pattern>/download/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Publication</servlet-name>
        <url-pattern>/Publication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicationTag</servlet-name>
        <url-pattern>/PublicationTag</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SynchroNotification</servlet-name>
        <url-pattern>/SynchroNotification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginChat</servlet-name>
        <url-pattern>/LoginChat</url-pattern>
    </servlet-mapping>


    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>
</web-app>